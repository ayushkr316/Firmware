void loop() 
{
  if(GPS.available())
  {
    gps.encode(GPS.read());
  }
  display.clearDisplay();
  display.setCursor(0,0);
  display.setTextSize(1);
  display.println("Latitude : "+String(gps.location.rawLat().deg));
  display.println("Longitude :"+String(gps.location.rawLng().deg));
  display.println("WiFi connected to : "+String(SSID1));
  display.println("IP Address : 192.168.43.53");
  display.print("X offset : "+String(mpu6050.getAngleX()));
  display.println("\tY offset : "+String(mpu6050.getAngleY()));
  display.println("\tZ offset : "+String(mpu6050.getAngleZ()));
  display.display();
}
